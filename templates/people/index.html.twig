{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <div id="root">Loading...</div>
    <noscript>To use this app, enable JavaScript</noscript>
    <div>
        Versijuojamas JavaScript failas: <b id="versionedFile">...</b>
    </div>
    <div>
        <label for="name">Vardas:</label>
        <input type="text" id="name"/>
        <span id="validation-name" data-path="{{ path('validate', {'element': 'name'}) }}"/>
    </div>
    <div>
        <label for="team">Projektas:</label>
        <input type="text" id="team"/>
        <span id="validation-team" data-path="{{ path('validate', {'element': 'team'}) }}"/>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        var usingVersionedFileJs = true;
        var usingReactApp = true;
    </script>
    {{ encore_entry_script_tags('js/validation') }}
    {{ parent() }}
{% endblock %}
